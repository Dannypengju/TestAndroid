<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffff0000">

    <TextView
            android:id="@+id/sb"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:text="aaaaaaaaaa"/>

    <Button
            android:id="@+id/btn_show"
            android:layout_height="50dp"
            android:layout_width="100dp"
            android:layout_centerInParent="true"
            android:text="show menu"/>

    <Button
            android:id="@+id/btn_show_pup_window"
            android:layout_height="50dp"
            android:layout_width="100dp"
            android:layout_above="@id/btn_show"
            android:text="show pup"/>

    <Button
            android:id="@+id/btn_find"
            android:layout_height="50dp"
            android:layout_width="100dp"
            android:layout_below="@id/btn_show"
            android:layout_centerHorizontal="true"
            android:text="测试微信"/>


    <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:flipInterval="2000"
            android:layout_marginBottom="20dip">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:text="与对方一起摇一摇"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:text="点一点以文本发送"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:text="请对方扫一扫"/>

    </ViewFlipper>

   <com.example.testandroid.xia.datetime.wheelview.VerticalScrollAutoSelector
           android:id="@+id/my_whell"
           android:layout_width="200dp"
           android:layout_height="200dp"></com.example.testandroid.xia.datetime.wheelview.VerticalScrollAutoSelector>

    <Button
            android:id="@+id/repeat_action"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:layout_alignParentBottom="true"
            android:text="button"/>


    <com.example.testandroid.gif.GifView
            android:id="@+id/gif_show"
            android:layout_height="100dp"
            android:layout_width="fill_parent"
            android:layout_below="@id/btn_find"/>


</RelativeLayout>